<!DOCTYPE html>
<html>
<head>
  <title>Practice</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<div class="container">
  <div class="row">
    <div class="col-md-12">
       <% if current_user %>     
        Hello, <%= current_user.nickname %>    
        <%= link_to('登出', destroy_user_session_path, :method => :delete) %> |
        <%= link_to('修改資料', edit_registration_path(:user)) %>
      <% else %>
        <%= link_to('註冊', new_registration_path(:user)) %> |
        <%= link_to('登入', new_session_path(:user)) %>   
        <%= link_to "Facebook登入", user_omniauth_authorize_path(:facebook) %>
      <% end %> 
  
      <h1>Super Information</h1> 
      <div> <%= link_to "About", about_posts_path %> </div>
      <div> <%= link_to "Profile", profile_path %> </div> 

      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <%= yield %>
    </div>
  </div>
</div>





</body>
</html>
