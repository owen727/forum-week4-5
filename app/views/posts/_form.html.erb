
<%=form_for @post do |f| %>

  <% if @post.errors.any? %>
    
    <p> <%=@post.errors.full_messages[0] %> </p>  
      
  <% end %>
  
  
  <%=f.label :title %>
  <br>
  <%=f.text_field :title %>
  
  <br><br>

  <%=f.label :content %>
  <br>
  <%=f.text_area :content %>
  
  <br>
  <br>

  <%=f.submit %>

<% end %>